{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
